<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>lei.LoginServlet</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/mylogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>handleServlet</servlet-name>
        <servlet-class>lei.HandleServlet</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>handleServlet</servlet-name>
        <url-pattern>/myhandle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>resultServlet</servlet-name>
        <servlet-class>lei.ResultServlet</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>resultServlet</servlet-name>
        <url-pattern>/myresult</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>failuretServlet</servlet-name>
        <servlet-class>lei.FailureServlet</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>failuretServlet</servlet-name>
        <url-pattern>/myfailure</url-pattern>
    </servlet-mapping>
</web-app>